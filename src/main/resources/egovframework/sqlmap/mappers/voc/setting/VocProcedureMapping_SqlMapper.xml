<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egov.voc.kspo.setting.dao.VocProcedureMappingDao">

    <sql id="vocManagementCodeCols">
        MANAGEMENT_CD,
        TOP_CD,
        PRNTS_CD,
        TOP_COMN_CD,
        COMN_CD,
        ODRG,
        LVL,
        CODE_NM,
        USE_YN,
        REG_USR,
        REG_DT
    </sql>

    <select id="vocManagementCodeTree" resultType="com.egov.voc.kspo.setting.model.VocManagementCodeVo">
        select
        <include refid="vocManagementCodeCols"/>
        from
            voc_management_code
        where
            top_comn_cd = #{topComnCd}
            <if test="comnCd instanceof java.util.ArrayList">
                and
                comn_cd in
                <foreach collection="comnCd" item="item" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>
            and
            prnts_cd is not null
        order by
            MANAGEMENT_CD
    </select>

    <select id="select" resultType="com.egov.voc.kspo.setting.model.VocProcedureMappingVo">
        select
            vmrm.*,
            vmc.*
        from
            voc_mc_relation_mapping vmrm inner join voc_management_code vmc
            on vmrm.management_cd = vmc.management_cd
        <where>
            <if test="mappingSeq != null and !mappingSeq.equals('')">
                mapping_seq = #{mappingSeq}
            </if>
            <if test="managementCd != null and !managementCd.equals('')">
                and
                management_cd = #{managementCd}
            </if>
        </where>
    </select>

    <select id="selectList" resultType="com.egov.voc.kspo.setting.model.VocProcedureMappingVo">
        select
            vmrm.*,
            vmc.*
        from
            voc_mc_relation_mapping vmrm inner join voc_management_code vmc
            on vmrm.management_cd = vmc.management_cd
        <where>
            <if test="prntsMappingSeq != null and !prntsMappingSeq.equals('')">
                and
                prnts_mapping_seq = #{prntsMappingSeq}
            </if>
        </where>
    </select>

    <select id="selectMaxCd" resultType="String">
        select
            max(mapping_seq)
        from
            VOC_MC_RELATION_MAPPING
    </select>

    <select id="selectManagementCode" resultType="com.egov.voc.kspo.setting.model.VocManagementCodeVo">
        select
            *
        from
            VOC_MANAGEMENT_CODE
        where
            management_cd = #{managementCd}
    </select>

    <insert id="insert">
        insert into VOC_MC_RELATION_MAPPING
        (MAPPING_SEQ, MANAGEMENT_CD, PRNTS_MAPPING_SEQ, LVL, REG_USR)
        values
            (
             #{mappingSeq},
             #{managementCd},
             #{prntsMappingSeq},
             #{lvl},
             #{loginUsr}
            )
    </insert>
    
    <delete id="delete">
        delete from VOC_MC_RELATION_MAPPING
        where
            mapping_seq in
            <foreach collection="list" item="vo" open="(" separator="," close=")">
                #{vo.mappingSeq}
            </foreach>
    </delete>
</mapper>
